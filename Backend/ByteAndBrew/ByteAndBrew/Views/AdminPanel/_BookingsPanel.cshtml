@{
    /* _BookingsPanel.cshtml */
}
@model List<ByteAndBrew.Dtos.Booking.BookingReadDetailedDto>

<div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6 mt-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">Bookings</h3>

    @if (!Model.Any())
    {
        <p class="text-gray-500">No bookings found.</p>
    }
    else
    {
        <ul class="space-y-3">
            @foreach (var booking in Model)
            {
                <li id="booking-@booking.Id"
                    class="flex justify-between items-center p-4 border rounded-lg"
                    data-customer="@booking.CustomerName"
                    data-customerid="@booking.CustomerId"
                    data-guests="@booking.NumberOfGuests"
                    data-start="@booking.StartTime.ToString("yyyy-MM-ddTHH:mm")"
                    data-table="@booking.TableId">
                    <div class="booking-display flex-1">
                        <span>@booking.CustomerName (@booking.StartTime.ToString("dd MMM yyyy HH:mm"))</span>
                        <span>Table: @booking.TableNumber</span>
                        <span>Guests: @booking.NumberOfGuests</span>
                    </div>
                    <div class="flex space-x-2">
                        <button onclick="editBooking(@booking.Id)" class="text-blue-600 hover:underline">Edit</button>
                        <button onclick="deleteBooking(@booking.Id)" class="text-red-600 hover:underline">Delete</button>
                    </div>
                </li>
            }
        </ul>
    }
</div>
