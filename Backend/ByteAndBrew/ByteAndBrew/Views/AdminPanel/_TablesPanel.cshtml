<!-- _TablesPanel.cshtml -->
@model List<ByteAndBrew.Models.Table>
<div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6 mt-6">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-2xl font-bold text-gray-900 flex items-center">
            <i class="fas fa-chair text-yellow-600 mr-3"></i>
            Tables Management
        </h3>
        <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm font-medium">
            @Model.Count() @(Model.Count() == 1 ? "table" : "tables")
        </span>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12">
            <i class="fas fa-chair text-gray-300 text-6xl mb-4"></i>
            <p class="text-gray-500 text-lg mb-2">No tables found</p>
            <p class="text-gray-400 text-sm">Add your first table using the quick actions below</p>
        </div>
    }
    else
    {
        <div class="space-y-4">
            @foreach (var table in Model)
            {
                <div id="table-@table.Id"
                     class="group bg-gray-50 hover:bg-gray-100 border-2 border-gray-200 hover:border-yellow-300 rounded-xl p-5 transition-all duration-200 hover:shadow-md"
                     data-tablenumber="@table.TableNumber"
                     data-capacity="@table.Capacity">
                    <div class="table-display flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="bg-yellow-100 p-3 rounded-lg">
                                <i class="fas fa-chair text-yellow-600 text-xl"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-lg text-gray-900">Table @table.TableNumber</h4>
                                <div class="flex items-center text-gray-600 mt-1">
                                    <i class="fas fa-users mr-2 text-sm"></i>
                                    <span>Capacity: @table.Capacity seats</span>
                                </div>
                            </div>
                        </div>
                        <div class="flex space-x-3 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                            <button onclick="editTable(@table.Id)"
                                    class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200 flex items-center">
                                <i class="fas fa-edit mr-2"></i>Edit
                            </button>
                            <button onclick="deleteTable(@table.Id)"
                                    class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200 flex items-center">
                                <i class="fas fa-trash mr-2"></i>Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>