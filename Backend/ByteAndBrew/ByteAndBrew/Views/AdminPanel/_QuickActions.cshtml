<div class="bg-white rounded-2xl shadow-xl border border-gray-200">
    <div class="bg-gradient-to-r from-gray-800 to-gray-900 text-white p-4 sm:p-6 rounded-t-2xl">
        <h2 class="text-xl sm:text-2xl font-bold flex items-center">
            <i class="fas fa-bolt mr-2"></i> Quick Actions
        </h2>
    </div>
    <div class="p-4 sm:p-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <!-- Booking -->
            <div class="relative">
                <button onclick="toggleQuickForm(this, 'CreateBooking')" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white px-4 sm:px-6 py-2 rounded-xl font-medium shadow-lg w-full flex items-center justify-center">
                    <i class="fas fa-plus mr-2"></i> Create Booking
                </button>
                <div class="quick-form-container mt-2 hidden"></div>
            </div>

            <!-- Menu Item -->
            <div class="relative">
                <button onclick="toggleQuickForm(this, 'CreateMenuItem')" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-4 sm:px-6 py-2 rounded-xl font-medium shadow-lg w-full flex items-center justify-center">
                    <i class="fas fa-plus mr-2"></i> Add Menu Item
                </button>
                <div class="quick-form-container mt-2 hidden"></div>
            </div>

            <!-- Table -->
            <div class="relative">
                <button onclick="toggleQuickForm(this, 'CreateTable')" class="bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 text-white px-4 sm:px-6 py-2 rounded-xl font-medium shadow-lg w-full flex items-center justify-center">
                    <i class="fas fa-plus mr-2"></i> Add Table
                </button>
                <div class="quick-form-container mt-2 hidden"></div>
            </div>
        </div>
    </div>
</div>
