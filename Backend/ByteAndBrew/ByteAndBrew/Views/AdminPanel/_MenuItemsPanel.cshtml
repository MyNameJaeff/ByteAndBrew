@model List<ByteAndBrew.Models.MenuItem>

<div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6 mt-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">Menu Items</h3>
    @if (!Model.Any())
    {
        <p class="text-gray-500">No menu items found.</p>
    }
    else
    {
        <ul class="space-y-2">
            @foreach (var item in Model)
            {
                <li class="flex justify-between items-center p-3 border border-gray-100 rounded-lg">
                    <span>@item.Name (@item.Price.ToString("C"))</span>
                    <div class="space-x-2">
                        <a href="@Url.Action("EditMenuItem", "AdminPanel", new { id = item.Id })" class="text-blue-600 hover:underline">Edit</a>
                        <button onclick="deleteItem('MenuItem', @item.Id, this)" class="text-red-600 hover:underline">Delete</button>
                    </div>
                </li>
            }
        </ul>
    }
</div>
