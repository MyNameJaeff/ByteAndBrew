@*
Utveckla menysidan
Skapa en sida där besökare kan se hela menyn:
Hämta och visa dynamiskt alla rätter från API:et, inklusive namn, pris, beskrivning och eventuell bild (BildUrl).
Menysidan ska presenteras på ett tydligt och attraktivt sätt, anpassat till ditt tema.
*@

@model List<ByteAndBrew.Models.MenuItem>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Menu";
    ViewData["Description"] = "Explore our handcrafted menu items at Byte & Brew. All items are carefully prepared by our baristas with premium ingredients, from coffee to snacks, to delight your taste buds in a cozy and work-friendly café environment.";
}

<section class="px-4 py-6 md:py-0 sm:px-6 lg:px-8 pb-16">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-gray-800 mb-4">
                Our Popular Menu Items
            </h2>
            <p class="text-base sm:text-lg md:text-xl text-gray-600 italic">
                Handcrafted with love, served with passion
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 justify-items-center">
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("_MenuItemCard", item)
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-16">
                <i class="fas fa-coffee text-5xl sm:text-6xl text-amber-800 mb-6"></i>
                <p class="text-base sm:text-lg md:text-xl text-gray-600">
                    No menu items available at the moment. Check back soon!
                </p>
            </div>
        }
    </div>
</section>

