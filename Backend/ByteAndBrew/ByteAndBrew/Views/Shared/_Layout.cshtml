<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Dynamisk titel -->
    <title>@ViewData["Title"] - Byte & Brew</title>

    <!-- Meta description -->
    <meta name="description" content="@ViewData["Description"]" />
    <link rel="canonical" href="@ViewData["CanonicalUrl"]" />
    <meta name="robots" content="index, follow" />

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex flex-col min-h-screen font-sans bg-gray-50 text-gray-800">

    <!-- Header -->
    <header class="bg-white shadow relative z-50">
        <nav class="container mx-auto flex flex-wrap md:flex-nowrap items-center justify-between p-4 relative" aria-label="Main navigation">

            <!-- Logo -->
            <a href="/" class="flex items-center mb-4 md:mb-0" aria-label="Byte & Brew Home">
                <img src="~/images/byteAndBrewLogo.png" alt="Byte & Brew Logo - Premium Coffee & Work-Friendly Café" class="h-12 md:h-16 mr-2 md:mr-4" loading="lazy" />
                <span class="text-xl md:text-2xl font-bold text-gray-800">Byte & Brew</span>
            </a>

            <!-- Mobile Navigation -->
            <div class="md:hidden">
                <button id="menu-button" class="bg-gray-100 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500" aria-expanded="false" aria-controls="nav-links" aria-label="Toggle menu">
                    <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>

                <div id="nav-overlay" class="fixed inset-0 bg-black bg-opacity-20 hidden z-40" aria-hidden="true"></div>
                <ul id="nav-links" class="fixed top-0 right-0 h-full w-64 bg-white shadow-lg transform translate-x-full transition-transform duration-300 p-6 flex flex-col space-y-4 z-50">
                    <li><a href="/" class="text-gray-700 hover:text-yellow-600 block text-lg">Home</a></li>
                    <li><a href="/Menu" class="text-gray-700 hover:text-yellow-600 block text-lg">Menu</a></li>
                    <li><a href="/AdminPanel" class="text-gray-700 hover:text-yellow-600 block text-lg">Admin Panel</a></li>
                </ul>
            </div>

            <!-- Desktop Navigation -->
            <ul class="hidden md:flex md:items-center md:space-x-8">
                <li><a href="/" class="text-gray-700 hover:text-yellow-600 text-base">Home</a></li>
                <li><a href="/Menu" class="text-gray-700 hover:text-yellow-600 text-base">Menu</a></li>
                <li><a href="/AdminPanel" class="text-gray-700 hover:text-yellow-600 text-base">Admin Panel</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto sm:px-6 lg:px-8 sm:py-6">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-6 mt-auto">
        <div class="container mx-auto text-center text-sm sm:text-base">
            <p>&copy; @DateTime.Now.Year Byte & Brew. All rights reserved.</p>
        </div>
    </footer>

    <script>
        const menuButton = document.getElementById('menu-button');
        const navLinks = document.getElementById('nav-links');
        const navOverlay = document.getElementById('nav-overlay');

        const toggleMenu = () => {
            const expanded = menuButton.getAttribute('aria-expanded') === 'true';
            menuButton.setAttribute('aria-expanded', !expanded);
            navLinks.classList.toggle('translate-x-full');
            navOverlay.classList.toggle('hidden');
        };

        menuButton?.addEventListener('click', toggleMenu);
        navOverlay?.addEventListener('click', toggleMenu);
    </script>

    @RenderSection("Styles", required: false)
    @RenderSection("Scripts", required: false)
</body>
</html>
