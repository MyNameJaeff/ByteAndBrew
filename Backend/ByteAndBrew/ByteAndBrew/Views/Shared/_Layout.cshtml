<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Byte & Brew</title>
    <link rel="stylesheet" href="~/css/site.css" />

    @* Tailwind CSS (only way i got it to work atm) *@
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex flex-col min-h-screen font-sans bg-gray-50 text-gray-800">

    <!-- Header -->
    <header class="bg-white shadow">
        <nav class="container mx-auto flex items-center justify-between p-4">
            <!-- Logo -->
            <div class="flex items-center">
                <img src="~/images/byteAndBrewLogo.png" alt="Byte & Brew Logo" class="h-10 mr-4">
            </div>

            <!-- Navigation Links -->
            <ul class="flex space-x-6 list-none m-0 p-0">
                <li><a href="/" class="text-gray-700 hover:text-yellow-600 transition-colors">Home</a></li>
                <li><a href="/Menu" class="text-gray-700 hover:text-yellow-600 transition-colors">Menu</a></li>
                <li><a href="/AdminPanel" class="text-gray-700 hover:text-yellow-600 transition-colors">AdminPanel</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto p-6">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-4 mt-auto">
        <div class="container mx-auto text-center">
            <p>&copy; @DateTime.Now.Year Byte & Brew. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
